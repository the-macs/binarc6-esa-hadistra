<div class="my-5">
    <div class="card">
        <div class="card-header">
            <h3><strong>User Lists</strong></h3>
        </div>
        <div class="card-body">
            <div class="col-12 mb-4">
                <a href="/dashboard/user/create" class="btn btn-primary btn-sm">Create</a>
            </div>
            <% if (message.msgType.length > 0) { %>
            <div class="alert alert-notif alert-<%= message.msgType %> py-2" id="alert-notif" role="alert">
                <%= message.msg %>
            </div>
            <% } %>
            <div class="table-responsive">
                <table class="table">
                    <thead class="table-secondary">
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Username</th>
                            <th scope="col">Name</th>
                            <th scope="col">Role</th>
                            <th scope="col" width="20%">Act.</th>
                        </tr>
                    </thead>
                    <tbody class="table-group-divider">
                        <% if (users.length > 0) { %>

                        <% users.forEach((user, index) => {%>
                        <tr>
                            <th scope="row"><%= index + 1 %></th>
                            <td><%= user.username %></td>
                            <td><%= user.name %></td>
                            <td><%= user.role %></td>
                            <td>
                                <!-- href="/dashboard/user-bio/<%= user._id %>" -->
                                <!-- data-bs-toggle="modal" data-bs-target="#exampleModal"  -->
                                <button data-id="<%= user._id %>" class="btn btn-primary btn-sm bio-modal">Bio</button>
                                <a href="/dashboard/user-history/<%= user._id %>"
                                    class="btn btn-primary btn-sm">History</a>
                                <a href="/dashboard/user/edit/<%= user._id %>" class="btn btn-primary btn-sm">Edit</a>
                                <form action="/dashboard/user?_method=DELETE" class="d-inline" method="POST">
                                    <input type="hidden" name="_id" value="<%= user._id %>" />
                                    <button type="submit" class="btn btn-danger btn-sm"
                                        onclick="return confirm('Are you sure?')">Delete</button>
                                </form>
                            </td>
                        </tr>
                        <%}); %>

                        <% } else { %>
                        <tr>
                            <td colspan="99" class="text-center"><strong>No Data</strong></td>
                        </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
        <input type="hidden" name="_id" id="userId">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Biodata</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-12">
                        <table class="table table-striped table-borderless table-hover mb-0">
                            <tr>
                                <td><strong>Email</strong></td>
                                <td>:</td>
                                <td class="td-modal" id="td-email"> </td>
                            </tr>
                            <tr>
                                <td><strong>Birthplace</strong></td>
                                <td>:</td>
                                <td class="td-modal" id="td-birthplace"> </td>
                            </tr>
                            <tr>
                                <td><strong>Birthdate</strong></td>
                                <td>:</td>
                                <td class="td-modal" id="td-birthdate"> </td>
                            </tr>
                            <tr>
                                <td><strong>Address</strong></td>
                                <td>:</td>
                                <td class="td-modal" id="td-address"> </td>
                            </tr>
                            <tr>
                                <td><strong>Gender</strong></td>
                                <td>:</td>
                                <td class="td-modal" id="td-gender"> </td>
                            </tr>
                            <tr>
                                <td><strong>Nationality</strong></td>
                                <td>:</td>
                                <td class="td-modal" id="td-nationality"> </td>
                            </tr>
                            <tr>
                                <td><strong>Phone</strong></td>
                                <td>:</td>
                                <td class="td-modal" id="td-phone"> </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
            <div class="modal-footer justify-content-between">
                <a type="button" class="btn btn-primary btn-edit">Edit</a>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(() => {
        $('.bio-modal').on('click', async (evt) => {
            const _id = evt.currentTarget.getAttribute('data-id')
            let myModal = new bootstrap.Modal($('#exampleModal'), {});

            try {
                const response = await axios.get(`${window.location.origin}/api/user-biodata/${_id}`)
                if (!response.data) {
                    alert(response.data.meta.message)
                    return
                } else {
                    myModal.show();

                    const data = response.data.data

                    if (data) {
                        $('#userId').val(_id)
                        $('#td-email').html(data.email)
                        $('#td-birthplace').html(data.birthplace)
                        $('#td-birthdate').html(data.birthdate)
                        $('#td-address').html(data.address)
                        $('#td-gender').html(data.gender)
                        $('#td-nationality').html(data.nationality)
                        $('#td-phone').html(data.phone)

                        $('.btn-edit').attr('href', `/dashboard/user-biodata/${_id}`)
                    } else {
                        $('.btn-edit').attr('href', `/dashboard/user-biodata/${_id}`)
                        $('.td-modal').html('<i class="text-muted">No Data Available</i>')
                    }
                }
            } catch (err) {
                console.log(err.message)
            }
        })
    })
</script>